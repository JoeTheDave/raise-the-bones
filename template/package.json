{
  "name": "{{PROJECT_NAME}}",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm run db:ensure && npm run db:migrate && concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:setup": "npm run db:ensure && npm run db:migrate",
    "dev:client": "vite --config client/vite.config.ts",
    "dev:server": "tsx watch server/src/index.ts",
    "build": "npm run build:client && npm run build:server",
    "build:with-db": "npm run build:client && npm run build:server && npm run db:generate",
    "clean": "rm -rf dist temp.* *.temp.*",
    "build:client": "vite build --config client/vite.config.ts",
    "build:server": "tsc -p server/tsconfig.json",
    "start": "node dist/server/index.js",
    "preview": "vite preview --config client/vite.config.ts",
    "db:ensure": "bash scripts/ensure-postgres.sh && bash scripts/ensure-database.sh",
    "db:generate": "prisma generate --schema=server/src/prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=server/src/prisma/schema.prisma",
    "db:migrate:deploy": "prisma migrate deploy --schema=server/src/prisma/schema.prisma",
    "db:push": "prisma db push --schema=server/src/prisma/schema.prisma",
    "db:studio": "prisma studio --schema=server/src/prisma/schema.prisma",
    "db:migrate:create": "prisma migrate dev --create-only --schema=server/src/prisma/schema.prisma",
    "db:migrate:status": "prisma migrate status --schema=server/src/prisma/schema.prisma",
    "db:migrate:resolve": "prisma migrate resolve --schema=server/src/prisma/schema.prisma",
    "db:reset": "prisma migrate reset --schema=server/src/prisma/schema.prisma",
    "postgres:shared-status": "docker ps -f name=raise-the-bones-postgres",
    "postgres:shared-stop": "docker stop raise-the-bones-postgres",
    "postgres:shared-logs": "docker logs raise-the-bones-postgres -f",
    "deploy": "node scripts/setup-deployment.js && npm run build && fly deploy",
    "deploy:force-setup": "rm -f .flyio-setup-complete && npm run deploy"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "prisma": "^6.13.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
}